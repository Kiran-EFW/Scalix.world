{
  "name": "scalix-cloud-api",
  "version": "1.0.0",
  "description": "Cost-optimized cloud API for Scalix using Firestore",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev-server": "node server-dev.js",
    "init-db": "node scripts/init-db.js",
    "test": "node test-api.js",
    "test:local": "API_BASE=http://localhost:8080 node test-api.js",
    "test:dev": "API_BASE=http://localhost:3000 node test-api.js",
    "build": "echo 'No build step required for API server'",
    "deploy": "gcloud run deploy scalix-api --source . --platform managed --allow-unauthenticated"
  },
  "keywords": [
    "scalix",
    "api",
    "firestore",
    "serverless"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "firebase": "^12.2.1",
    "firebase-admin": "^13.5.0",
    "helmet": "^8.1.0",
    "playwright": "^1.55.0",
    "rate-limiter-flexible": "^7.3.0",
    "stripe": "^14.17.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  }
}
