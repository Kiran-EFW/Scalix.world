# LiteLLM Configuration for Scalix
LITELLM_MODE=development

# Server Configuration
LITELLM_HOST=0.0.0.0
LITELLM_PORT=4000

# Master Key for API Access
LITELLM_MASTER_KEY=sk-scalix-dev-123456789

# Database Configuration (SQLite for development)
DATABASE_URL=sqlite:///./scalix_litellm.db

# Redis Configuration (optional for development)
REDIS_HOST=localhost
REDIS_PORT=6379

# Free Tier API Keys (using free tier models)
# Note: For testing without real API keys, we'll use mock/placeholder values
# In production, replace these with actual API keys
GEMINI_API_KEY=placeholder_gemini_key_for_testing
DEEPSEEK_API_KEY=placeholder_deepseek_key_for_testing

# Scalix Pro Configuration
SCALIX_ENGINE_URL=https://engine.scalix.world/v1
SCALIX_GATEWAY_URL=https://llm-gateway.scalix.world/v1
SCALIX_PRO_API_KEY=scalix_dev_key_123

# Logging
LITELLM_LOG_LEVEL=INFO
LITELLM_LOG_FILE=./logs/litellm.log

# Development Settings
DEBUG_MODE=true
ENABLE_CORS=true
